{
  "manifest_version": 2,

  "name": "T-Chatter Browser Sync",
  "description": "Extension for syncing current channel in the browser to the active channel in T-Chatter",
  "version": "0.1.0",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["js/background.js"]
  },

  "permissions": ["tabs", "https://www.twitch.tv/*", "storage"]
}
